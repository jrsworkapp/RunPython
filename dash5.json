{
  "uid": "ipanema-api-loki-dev",
  "title": "üìä Ipanema API ‚Äì Observabilidade (DEV)",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "tags": ["loki", "nlog", "ipanema", "dev"],
  "datasource": {
    "type": "loki",
    "uid": "loki"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "üöÄ Requests / segundo",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate({app=\"IpanemaAPI-v2\", env=\"dev\"}[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "type": "stat",
      "title": "‚è±Ô∏è Lat√™ncia m√©dia (ms)",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "avg_over_time({app=\"IpanemaAPI-v2\", env=\"dev\"} | json | unwrap durationMs [5m])",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "type": "stat",
      "title": "üî• Erros (4xx + 5xx)",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate({app=\"IpanemaAPI-v2\", env=\"dev\"} | json | statusCode =~ \"4..|5..\" [1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "üìà Lat√™ncia p95 / p99",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "quantile_over_time(0.95, {app=\"IpanemaAPI-v2\", env=\"dev\"} | json | unwrap durationMs [5m])",
          "legendFormat": "p95"
        },
        {
          "expr": "quantile_over_time(0.99, {app=\"IpanemaAPI-v2\", env=\"dev\"} | json | unwrap durationMs [5m])",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "üö¶ Status HTTP (RPS)",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "sum(rate({app=\"IpanemaAPI-v2\", env=\"dev\"} | json | statusCode =~ \"2..\" [1m]))",
          "legendFormat": "2xx"
        },
        {
          "expr": "sum(rate({app=\"IpanemaAPI-v2\", env=\"dev\"} | json | statusCode =~ \"4..\" [1m]))",
          "legendFormat": "4xx"
        },
        {
          "expr": "sum(rate({app=\"IpanemaAPI-v2\", env=\"dev\"} | json | statusCode =~ \"5..\" [1m]))",
          "legendFormat": "5xx"
        }
      ]
    },
    {
      "id": 6,
      "type": "table",
      "title": "üß≠ Top 10 Endpoints ‚Äì Lat√™ncia M√©dia",
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 7 },
      "targets": [
        {
          "expr": "topk(10, avg_over_time({app=\"IpanemaAPI-v2\", env=\"dev\"} | json | unwrap durationMs [5m])) by (endpoint)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 7,
      "type": "table",
      "title": "üí• Erros por Endpoint",
      "gridPos": { "x": 12, "y": 10, "w": 12, "h": 7 },
      "targets": [
        {
          "expr": "sum by (endpoint)(rate({app=\"IpanemaAPI-v2\", env=\"dev\"} | json | statusCode =~ \"4..|5..\" [5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 8,
      "type": "logs",
      "title": "üß® Logs com Exce√ß√£o",
      "gridPos": { "x": 0, "y": 17, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "{app=\"IpanemaAPI-v2\", env=\"dev\"} | json | exceptions.exception.message != \"\"",
          "refId": "A"
        }
      ]
    }
  ]
}
